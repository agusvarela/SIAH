@model IEnumerable<String[]>

@{
    ViewBag.Title = "ReporteConsolidado";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    bool isFirst = true;
    //WebGrid grid = new WebGrid(source: Model.GetEnumerator().Current);
}

<div class="banner-catalog">
    <div class="container">
        <div class="col-lg-12">
            <h1>Reporte de Consolidado</h1>
            <div class="banner-catalog__content">Este reporte muestra la cantidad de insumos que han sido autorizados, por hospital.</div>
        </div>
    </div>
</div>
<div class="container" style=" padding-bottom: 30px;">

    <div class="">


        <br>
        <div class="row">

            <div class="col-md-12">
                <div class="form-card form-card--purple form-card--tight ">
                    <div class="form-card__content group">
                        @using (Html.BeginForm())
                        {
                            @*<div>
                                    @grid.GetHtml(tableStyle: "webgrid-table",
                                headerStyle: "webgrid-header",
                                footerStyle: "webgrid-footer",
                                alternatingRowStyle: "webgrid-alternating-row",
                                selectedRowStyle: "webgrid-selected-row",
                                rowStyle: "webgrid-row-style")
                                </div>*@

                            <div id="table_wrapper">
                                <table id="tablaReporte" class="table">

                                    @foreach (var i in Model)
                                    {
                                        <tr class="webgrid-row-style">
                                            @if (isFirst == false)
                    {
                        var total = 0;
                        foreach (var e in i)
                        {
                            var celda = e.AsInt(0);
                                                    <td class="webgrid-row-style webgrid-alternating-row">@e</td>
                                                    total += celda;
                                                }
                                                <td class="webgrid-row-style webgrid-alternating-row">@total</td>
                                            }
                                            else
                                            {
                                                foreach (var e in i)
                                                {
                                                    isFirst = false;
                                                    <td class="webgrid-header">@e</td>
                                                }
                                                <td class="webgrid-header">Total</td>

                                            }
                                        </tr>

                                    }
                                </table>

                            </div>
                        }
                        <div class="col-md-offset-10 col-md-2" style="width: 13%">
                            @*<a href="#" onClick="$('#tablaReporte').tableExport({type:'excel',escape:'false'});">Exportar a Excel (XLS)</a>*@
                            <input id="btn_export" type="button" value="Exportar Excel" class="btn btn-success btn-round btn_export" />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/tableExport.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.base64.js"></script>
    <script type="text/javascript">
        $(document).on('click', '.btn_export', function (event) {
            $('#tablaReporte').tableExport({ type: 'excel', escape: 'false' });
        });
    </script>
}
