@model SIAH.Models.Remitos.Remito

@{
    ViewBag.Title = "Carga de Remito";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@using (Html.BeginForm(new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="banner-catalog">
        <div class="container">
            <div class="col-lg-12">
                <h1>Carga Remito</h1>
                <div class="banner-catalog__content">
                    Realice la carga de Remitos de Pedido
                </div>
            </div>
        </div>
    </div>
    <br />




    <div class="container" style=" padding-bottom: 30px;">

        <div class="form-horizontal ">

            <div class="row">
                <div class="col-md-12">
                    <div class="form-card form-card--purple form-card--tight  animated zoomIn ">
                        <div class="form-card__title primary">
                            <div class="alert-icon">
                                <i class="material-icons">date_range</i>
                                <strong>Cargar un Remito</strong>
                            </div>
                        </div>

                        <div class="form-card__content group">

                    

                                <div class="col-sm-3">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.id, "Id Remito", htmlAttributes: new { @class = "control-label col-md-12 tota" })
                                        <div class="col-md-12">
                                            @Html.TextBox("remitoId", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.fechaEntregaEfectiva, "Fecha Entrega Pedido", htmlAttributes: new { @class = "control-label  tota " })
                                        
                                            @Html.TextBox("fecha", null, htmlAttributes: new { @class = "form-control" })
                                        
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.pedidoId, "Id Pedido", htmlAttributes: new { @class = "control-label col-md-12 tota" })
                                        <div class="col-md-12">
                                            @Html.TextBox("pedidoId", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group label-floating">
                                        @Html.Label("PathDetalles", htmlAttributes: new { @class = "control-label col-md-12 tota" })
                                        <div class="col-md-12">
                                            @Html.TextBox("path", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="pull-right">
                                    <input id="crear" type="submit" value="Create" class="btn btn-default" />

                           
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts{
    <script type="text/javascript" src="~/Scripts/tableExport.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.base64.js"></script>
    <script type="text/javascript">
        $(document).on('click', '#crear', function (event)
        {

            event.preventDefault();
            var url = '@Url.Action("CrearRemito", "Remitos", new { remitoId = "ID", fechaEntregaEfectiva = "DATE",  pedidoId = "PID",  pathDetalles = "PATH" })';

            url = url.replace("ID", $("#remitoId").val());
            url = url.replace("DATE", $("#fecha").val());
            url = url.replace("PID", $("#pedidoId").val());
            url = url.replace("PATH", $("#path").val());
            url = url.replace("amp;", "");
            alert(url);
            location.href = url;
        });
    </script>


}
