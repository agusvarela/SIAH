@using SIAH.Models.Enums

@{
    ViewBag.Title = "Nuevo usuario";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "crearUsuarioForm" }))
{
    @Html.AntiForgeryToken()
    <div class="banner-catalog">
        <div class="container">
            <div class="col-sm-9">
                <h1>Registrar nuevo usuario</h1>
                <div class="banner-catalog__content">Registre un nuevo usuario en el sistema.</div>
            </div>
            <div class="col-lg-3">
                <div class="icon icon-info">
                    <i class="material-icons pull-right" style="font-size: 100px">person</i>
                </div>
            </div>
        </div>
    </div>
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container" style=" padding-bottom: 30px;">

        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-card form-card--purple form-card--tight animated zoomIn">
                        <div class="form-card__title  purple-header">
                            <div class="alert-icon">
                                <i class="material-icons">add</i>
                                <strong>Información del usuario</strong>
                            </div>
                        </div>
                        <div class="form-card__content group">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" name="nombre" placeholder="Ingrese su nombre" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.Label("Apellido", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" name="apellido" placeholder="Ingrese su apellido" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-8">
                                            <input type="email" class="form-control"  placeholder="Ingrese su email" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.Label("Asignar un Rol", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-8">
                                            @{ foreach (var item in ViewBag.rolID.Items)
                                                {
                                                    string rol = ((DefaultRoles)item.id).ToString();
                                                    item.nombre = rol;
                                                }
                                            }
                                            @Html.DropDownList("rolID", null, htmlAttributes: new { @class = "form-control", @onchange = "updateInput()" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="col-md-12">
                                    <div id="divHospital" class="form-group">
                                        @Html.Label("Asignar un Hospital", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-8">
                                            @Html.DropDownList("hospitalID", null, "--Seleccione un hospital--", htmlAttributes: new { @class = "form-control" })
                                            <span class="text-danger">@ViewBag.HospitalRequired</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-bottom: 30px" })
                                        <div class="col-md-8" style="display: flex; align-items: center">
                                            <input id="password" type="password" class="form-control text-box single-line password" name="password">
                                            <i toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password" style="margin: 0px"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.Label("Confirmar contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-8" style="display: flex; align-items: center">
                                            <input id="confirmPassword" type="password" class="form-control text-box single-line password" name="confirmPassword">
                                            <i toggle="#confirmPassword" class="fa fa-fw fa-eye field-icon toggle-password" style="margin: 0px"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Crear usuario" class="btn btn-round btn-success pull-right" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            document.getElementById("divHospital").style.display = "none";
            updateInput();
            $(".toggle-password").click(function () {

                $(this).toggleClass("fa-eye fa-eye-slash");
                var input = $($(this).attr("toggle"));
                if (input.attr("type") == "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });
        });

        function updateInput() {
            if ($("#rolID option:selected").text().localeCompare("Farmacia") == 0) {
                document.getElementById("divHospital").setAttribute("style", "display: block");
            }
            else {
                $("#hospitalID").val('');
                document.getElementById("divHospital").setAttribute("style", "display: none");
            }
        }
    </script>
}