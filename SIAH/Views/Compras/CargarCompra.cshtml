@model SIAH.Models.Compras.Compra

@{
    ViewBag.Title = "CargarCompra";
}

<h3>CARGAR REMITO DE COMPRA</h3>

@using (Html.BeginForm("CargarCompra", "Compras", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container" style=" padding-bottom: 30px;">

        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                        @Html.TextBox("file", "", new { type = "file"}) <br />

                        <input type="submit" value="Cargar Compra" class="btn btn-round btn-success" data-toggle="modal" data-target="#myModal" />

                        @ViewBag.Message
                    </div>
                 </div>
            </div>
        </div>
}
