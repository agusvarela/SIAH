            console.log("stateNumber: " + stateNumber);
            console.log("stateFilterNumber: " + stateFilterNumber);
            console.log("oldStateNumber: " + oldStateFilter);
            if (stateFilterNumber != stateNumber) {
                if (stateFilterNumber != "") {
                    var oldstate = stateFilterNumber;
                    document.getElementById(oldstate).classList.remove('active');
                }

                stateFilterNumber = stateNumber;
                document.getElementById(stateFilterNumber).classList.add("active");

                if (stateFilterNumber == oldStateFilter && $('#fin').val() == fechaFinCorta && $('#inicio').val() && fechaInicioCorta) {
                    $('#aplicarFiltros').prop('disabled', true);
                } else {
                    $('#aplicarFiltros').prop('disabled', false);
                }
            } else if (stateNumber == stateFilterNumber) {
                document.getElementById(stateNumber).classList.remove('active');
                stateFilterNumber = "";

                if ($('#fin').val() == fechaFinCorta && $('#inicio').val() == fechaInicioCorta && oldStateFilter == stateFilterNumber) {
                    $('#aplicarFiltros').prop('disabled', true);
                } else if (oldStateFilter != stateFilterNumber) {
                    $('#aplicarFiltros').prop('disabled', false);
                }
            }
        }

