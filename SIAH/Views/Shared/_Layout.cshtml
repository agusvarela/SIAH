    <!-- CSS Files -->
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/SiahStyleNew.css")
    @Styles.Render("~/Content/css/SIAHStyle.css")
    @Styles.Render("~/Content/css/demo.css")
    <script src="~/Content/js/material.min.js"></script>
    <script src="~/Content/js/material-kit.js"></script>
    <script>
        $(function () {
            $("[data-toggle='tooltip']").tooltip();
        });
    </script>

</head>
<body>
    <div class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo-container">
                    <div class="logo">
                        <img src="~/Content/img/logo.jpg" alt="AH Logo">
                    </div>

                    @Html.Label(" Autorizaciones Hospitalarias", new { @class = " logo-container brand" })
                </div>
            </div>
            <div class="collapse navbar-collapse" id="navigation-index">
                <ul class="nav navbar-nav navbar-right">
                    <li class="">
                        @if (Session["userid"] != null)
                    {
                        <a>Ha iniciado sesion como @Session["nombre"].ToString()</a>
                    }
                </li>
                @*<li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                <li>@Html.ActionLink("Listado De Pedidos", "Listado", "Pedidos")</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Agregar<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/Insumos/Index">Insumo</a></li>
                        <li><a href="/Hospitales/Index">Hospital</a></li>
                        <li><a href="/Localidades/Index">Localidad</a></li>
                        <li><a href="/TiposInsumo/Index">Tipo Insumo</a></li>
                    </ul>
                </li>*@
              @try
              {
                  if (Session["rol"].ToString() == "RespAutorizacion")
                  {
                    <li>@Html.ActionLink("Ir al Dashboard", "RespAutorizacion", "Home")</li>
                  }
                  if (Session["rol"].ToString() == "DirectorArea")
                  {
                    <li>@Html.ActionLink("Ir al Dashboard", "DirectorArea", "Home")</li>
                  }
                  if (Session["rol"].ToString() == "RespFarmacia")
                  {
                    <li>@Html.ActionLink("Ir al Dashboard", "RespFarmaciaDashboard", "Home")</li>
                  }
                  if (Session["userid"] != null)
                  {
                    <li>@Html.ActionLink("Cerrar Sesion", "Logout", "Account")</li>
                  }
              }
              catch (Exception e)
              {
                <li>@Html.ActionLink("Iniciar Sesión", "Login", "Account")</li>
              }
            </ul>
        </div>
    </div>
</div>

    <div class="container body-content" style="background-color: white">
        @RenderBody()
    </div> 

<hr />
<footer>
    <p>&copy; @DateTime.Now.Year - SIAH</p>
</footer>



</body>
</html>
